/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/methylseq -profile test,docker --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input = 'samplesheet.csv'

    // Genome references - using a minimal test genome
    genome = 'GRCh38'
    
    // Skip some steps to speed up testing
    skip_trimming = false
    skip_deduplication = false
    
    // Alignment options
    aligner = 'bwameth'
    
    // Output options
    save_reference = true
    save_trimmed = false
    save_align_intermeds = false
    
    // Methylation calling options
    cytosine_report = false
    relax_mismatches = false
    num_mismatches = 0.6
    
    // Skip MultiQC for faster testing
    skip_multiqc = false
}
